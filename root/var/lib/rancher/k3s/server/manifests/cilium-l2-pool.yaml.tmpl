{{- if .is_bootstrap }}
apiVersion: "cilium.io/v2alpha1"
kind: CiliumL2AnnouncementPolicy
metadata:
  name: default-l2-policy
  namespace: kube-system
spec:
  loadBalancerIPs: true
  interfaces:
  - eth0
  nodeSelector:
    matchLabels: {}
---
apiVersion: "cilium.io/v2alpha1"
kind: CiliumLoadBalancerIPPool
metadata:
  name: default-pool
  namespace: kube-system
spec:
  blocks:
  - start: "10.0.1.200"
    stop: "10.0.1.220"
  serviceSelector:
    matchLabels: {}
{{- end }}